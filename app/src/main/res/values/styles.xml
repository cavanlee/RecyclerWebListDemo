<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--底部dialog-->
    <style name="BottomFragmentDialogWithAnim" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnim</item>
    </style>

    <!--顶部dialog-->
    <style name="TopFragmentDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- Dialog进入及退出动画 -->
    <style name="BottomDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_anim_exit</item>
    </style>

    <!--水平线分割线-->
    <style name="line_horiz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>
    <!--水平线分割线-->
    <style name="line_horiz_left16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/color_divider</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
    </style>

</resources>
